{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"]
    },
    "moduleResolution": "node",
    "outDir": "dist",
    "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
